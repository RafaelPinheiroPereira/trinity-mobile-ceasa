<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:title="Trinity Mobile - Minas Frango"
            app:subtitle="Vendas"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_cliente_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Codigo Cliente"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_fantasy_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Nome Fantasia"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_cnpj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_open_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/txt_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorPrimary"
                        android:text="Adress"
                        android:textSize="18sp" />
                </LinearLayout>


                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="?android:attr/listDivider" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="Formas de Pagamento:"/>


                    <Spinner
                        android:id="@+id/spn_payment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="18sp"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        style="@style/TextInputLayout"

                        android:hint="COD.Produto,Descrição"
                        app:endIconMode="clear_text"
                        android:layout_marginRight="10dp"
                        app:endIconDrawable="@mipmap/ic_clear_black_48dp"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/act_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:completionThreshold="1"
                            android:padding="10dp"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                    </com.google.android.material.textfield.TextInputLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout

                        style="@style/TextInputLayout"
                        android:hint="QTD"
                        android:layout_width="189dp"
                        app:endIconDrawable="@mipmap/ic_clear_black_48dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText

                            android:id="@+id/edt_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:digits="0123456789."
                            android:hint="QTD."
                            android:enabled="true"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="9"
                            android:textSize="18sp"

                            android:textColor="@android:color/primary_text_light"
                          />



                    </com.google.android.material.textfield.TextInputLayout>
                    <Spinner
                        android:id="@+id/spn_unities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="189dp"
                        style="@style/TextInputLayout"
                        android:layout_height="wrap_content">
                        <br.com.app.rmalimentos.utils.CurrencyEditText

                            android:id="@+id/cet_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:digits="0123456789."
                            android:hint="Preço"
                            android:enabled="false"
                            android:inputType="number|textMultiLine"
                            android:lines="1"
                            android:maxLength="9"
                            android:padding="10dp"
                            android:textSize="18sp"
                            app:groupDivider="."
                            app:monetaryDivider=","
                            app:locale="en_US"
                            android:textColor="@android:color/primary_text_light"
                            app:showSymbol="false">

                        </br.com.app.rmalimentos.utils.CurrencyEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txt_total_value_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:text=""
                        android:textColor="@color/textColorPrimary"
                        android:textSize="18sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Adicionar"
                        app:icon="@mipmap/ic_add_shopping_cart_black_48dp"
                        android:textColor="@color/primary_dark"
                        app:iconGravity="textStart"
                        />

                    <TextView
                        android:id="@+id/txt_amount_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/md_light_green_900"
                        android:textSize="18sp"
                        android:text="R$"

                        app:iconGravity="textStart" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sale_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>