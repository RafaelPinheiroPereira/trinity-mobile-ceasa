<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_fantasy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Nome Fantasia"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_social_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Razao Social"
                android:textColor="@color/textColorPrimary"

                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/txt_client_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Codigo Cliente"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary"
                />


            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="?android:attr/listDivider" />


            <TextView
                android:id="@+id/txt_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Rua das Paparaubas, 14 - Renascença"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />


            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Telefone"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Contato"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary" />


            <TextView
                android:id="@+id/txt_cpf_cnpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="CPF/CNPJ"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary" />


            <TextView
                android:id="@+id/txt_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="RG"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary"/>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="?android:attr/listDivider" />


            <TextView
                android:id="@+id/txt_observation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="OBS:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"/>


            <TextView
                android:id="@+id/txt_open_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="QTD Notas Abertas:"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary" />


            <TextView
                android:id="@+id/txt_average_purchase_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="VLR. Médio Compras:"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>